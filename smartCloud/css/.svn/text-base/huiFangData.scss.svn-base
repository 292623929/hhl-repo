$activeColor: #C2D2FF;

.backhead {
  height: 66px;
  width: 100%;
  position: relative;
  background-color: $backtop;
  img {
    height: 100%;
  }
  .back-l {
    float: left;
  }
  .back-r {
    float: right;
  }
  .admin-wrapper {
    position: absolute;
    height: 30px;
    right: 20px;
    top: 18px;
    font-size: 0;
    &:hover {
      .admin-menu {
        opacity: 1;
      }
    }
    img {
      cursor: pointer;
      float: left;
      height: 100%;
      width: 30px;
      border-radius: 50%;
      margin-right: 11px;
    }
    .admin-name {
      cursor: pointer;
      float: left;
      font-size: $f14;
      line-height: 30px;
      color: $cfff;
    }
    .admin-menu {
      opacity: 0;
      position: absolute;
      left: -14px;
      top: 48px;
      width: 130px;
      height: 35*3px;
      @include trans3;
      ul {
        padding-left: 0;
        li {
          cursor: pointer;
          font-size: $f14;
          width: 100%;
          height: 35px;
          background-color: $menugray;
          color: $c9A;
          text-align: center;
          line-height: 35px;
          @include trans6;
          &:hover {
            background-color: $backtop;
            color: $cfff;
          }
        }
      }
    }
  }
}

